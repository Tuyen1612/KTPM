@model IEnumerable<_0306191373_0306191333_0306191376_0306191482.Models.Invoice>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
    List<Invoice> lstInvoices = ViewBag.InvoiceList;
    ViewData["Title"] = "Lịch sử mua hàng";
    string username = "Khach"; ;
    bool member = false;
    if (ViewBag.UserName != null)
    {
        username = ViewBag.UserName;
        member = true;
        @section Member{<li><a asp-controller="Accounts" asp-action="Logout">Logout</a></li>};
        @section Cart{
            <div class="shopping-item">
                <a asp-controller="Carts" asp-action="CartUser">Cart<i class="fa fa-shopping-cart"></i> <span class="product-count">5</span></a>
            </div>
        }
    }
    else
    {
        @section Member{};
        @section Cart{
            <div class="shopping-item">
                <a asp-controller="Accounts" asp-action="Login">Cart<i class="fa fa-shopping-cart"></i></a>
            </div>
        }
    }
}
@section name{@username};
<!-- DATA TABLE-->
<section class="p-t-20">
    <div class="container">
        <div class="row">
            <div class="col-md-12">


                <div class="table-responsive table-responsive-data2">
                    <table class="table table-data2">
                        <thead>

                            <tr>

                                <th>
                                    ID
                                </th>
                                <th>
                                    Code
                                </th>
                                <th>
                                    Ngày lập HĐ
                                </th>
                                <th>
                                    Địa chỉ giao hàng
                                </th>
                                <th>
                                    SĐT
                                </th>
                                <th>
                                    Tổng tiền
                                </th>

                                <th></th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in lstInvoices)
                            {
                                <tr>

                                    <td>
                                        @item.id
                                    </td>
                                    <td>
                                        @item.Code
                                    </td>
                                    <td>
                                        @item.IssueDate
                                    </td>
                                    <td>
                                        @item.ShippingAddress
                                    </td>
                                    <td>
                                        @item.ShippingPhone
                                    </td>
                                    <td>
                                        @item.Total
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.id">Details</a> |

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- END DATA TABLE-->