@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    string username = "Khach"; ;
    bool member = false;
    if (ViewBag.UserName != null)
    {
        username = ViewBag.UserName;
        member = true;
        @section Member{<li><a asp-controller="Accounts" asp-action="Logout">Logout</a></li>};
        @section Cart{
            <div class="shopping-item">
                <a asp-controller="Carts" asp-action="CartUser">Cart<i class="fa fa-shopping-cart"></i> <span class="product-count">5</span></a>
            </div>
        }
    }
    else
    {
        @section Member{}
        @section Cart{
            <div class="shopping-item">
                <a asp-controller="Accounts" asp-action="Login">Cart<i class="fa fa-shopping-cart"></i></a>
            </div>
        }
    }

}
@section name{@username};

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Kết quả tìm kiếm</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<!--================Search Box Area =================-->
<!--================Search Box Area =================-->
<div class="search_area zoom-anim-dialog mfp-hide" id="test-search" style="margin-left:200px">
    <div class="search_box_inner">
        <form asp-controller="Products" asp-action="Search" method="get">

            <div class="input-group" style="margin-top:10px">
                <input type="text" name="min" class="form-control" placeholder="Nhập giá ">
                <input style="margin-top:10px" type="text" name="max" class="form-control" placeholder="Nhập giá">
                <button style="margin-top:10px">Search</button>
            </div>

        </form>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <img src="~/img/@item.Image" alt="@item.Id">
                        </div>
                        <h2><a href="">@item.Name</a></h2>
                        <div class="product-carousel-price">
                            <ins>@item.Price</ins>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
                        </div>
                    </div>
                </div>
            }

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

